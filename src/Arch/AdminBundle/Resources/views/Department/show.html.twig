{% extends "::base.html.twig" %}

{% block body %}
<h1>Department</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    <tr>
        <th>Personal</th>
        <td>
            <table class="table">
            {% for person in personal %}
                <tr>
                    <td><a href="{{ path('personal_show', {'id' : person.id }) }}">{{ person.pib }}</a></td>
                </tr>
            {% endfor %}
            </table>
        </td>
    </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('department') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('department_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('department_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
