{% extends "::base.html.twig" %}

{% block body %}
<h1>Personal edit</h1>

<form action="{{ path('personal_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="well">
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('personal') }}" class="btn">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('personal_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
