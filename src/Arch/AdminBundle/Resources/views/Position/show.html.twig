{% extends "::base.html.twig" %}

{% block body %}
<h1>Position</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    <tr>
        <th>Position</th>
        <td>
            <ul>
                {% for person in personal %}
                <li><a href="{{ path('personal_show', {'id' : person.id}) }}">{{ person.pib }}</a></li>
                {% endfor %}
            </ul>
        </td>
    </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('position') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('position_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('position_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
