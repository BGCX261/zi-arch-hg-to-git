{% extends "::base.html.twig" %}
{% block body %}
<h1>SoftwareType</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    <tr>
        <th>Software</th>
        <td>
            <ul>
            {% for prog in software %}
                <li><a href="{{ path('software_show', {'id' : prog.id}) }}">{{ prog.name }}</a></li>
            {% endfor %}
            </ul>
        </td>
    </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('softwaretype') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('softwaretype_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('softwaretype_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
