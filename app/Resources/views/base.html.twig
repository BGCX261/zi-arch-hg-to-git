{% set controller = app.request.attributes.get('_template').get('controller') %}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" media="all"/>
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.min.css') }}"/>
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">

            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">Architecture institute</a>

            <div class="nav-collapse">
                <ul class="nav">
                    <li class="{% if controller == 'Department' %} active {% endif %}">
                        <a href="{{ path('department') }}">Departments</a>
                    </li>
                    <li class="{% if controller == 'Personal' %} active {% endif %}">
                        <a href="{{ path('personal') }}">Personal</a>
                    </li>
                    <li class="{% if controller == 'Position'%} active {% endif %}">
                        <a href="{{ path('position') }}">Position</a>
                    </li>
                    <li class="{% if controller == 'HardwareType'%} active {% endif %}">
                        <a href="{{ path('hardwaretype') }}">Hardware type</a>
                    </li>
                    <li class="{% if controller == 'Hardware'%} active {% endif %}">
                        <a href="{{ path('hardware') }}">Hardware</a>
                    </li>
                    <li class="{% if controller == 'License'%} active {% endif %}">
                        <a href="{{ path('license') }}">License</a>
                    </li>
                    <li class="{% if controller == 'Software'%} active {% endif %}">
                        <a href="{{ path('software') }}">Software</a>
                    </li>
                    <li class="{% if controller == 'SoftwareType'%} active {% endif %}">
                        <a href="{{ path('softwaretype') }}">Software type</a>
                    </li>
                    <li class="{% if controller == 'Device'%} active {% endif %}">
                        <a href="{{ path('device') }}">Device</a>
                    </li>

                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>

</div>

<div class="container">
    {% block body %}
    {% endblock %}
</div>
<!-- /container -->

{% block javascripts %}
<script type="text/javascript" src="{{ asset('js/jquery-1.7.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/bootstrap.min.js')}}"></script>
{% endblock %}
</body>
</html>
